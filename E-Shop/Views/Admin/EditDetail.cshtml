@{
    ViewData["Title"] = "Admin Page";
    Layout = "_Admin";
}
@model ProductDetail
<div style="display: flex; flex-direction:row">
    <form asp-controller="Admin" asp-action="UploadDetail" method="get" style="margin-top:10%; margin-bottom:10%; flex:1; ">
        <input asp-for="ProductDetailID" value=@Model.ProductDetailID readonly  style="border:none"/>
        <div>
            <div><label  class="text-center"></label>Color Code</div>
            <div><input asp-for="ColorCode" value=@Model.ColorCode placeholder="Color" class="input-group-text" /></div>
        </div>
        <div>
            <div><label class="text-center"></label>Product Price</div>
            <div><input asp-for="ProductPrice" value=@Model.ProductPrice placeholder="ProductPrice" class="input-group-text" /></div>
        </div>
        <div>
            <div><label  class="text-center">Product Variant sale(If sale is selected, the price of item will be determined from default product price!)</label></div>
            <div>
            <select asp-for="ProductSale">
                <option value=0>No Sale</option>
                <option value=1>Half Price Down</option>
                 <option value=2>1/3 Of Price</option>
            </select>
            </div>
        </div>     
        <br />
            <button type="submit" class="btn btn-primary">Confirm</button>       
    </form>

</div>

<hr />
<a href="/Admin/DeleteDetail?ID=@Model.ProductDetailID" class="A-def DefaultA">
    <div class="alert-danger" style="max-height: 5%; max-width: 5%;">
        DELETE
    </div>
</a>