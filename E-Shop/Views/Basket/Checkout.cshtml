@model CustomerData
<body class="bg-light" >
  <div class="row" style="margin-top: 10%">
        <a asp-action="Index" style="text-decoration: none; color: black">
            ...Zpátky do košíku
        </a>
    <div class="col-md-4 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Your cart</span>
        <span style="background-color: grey" class="badge badge-pill">@ViewBag.Basket.Count</span>
      </h4>
      <ul class="list-group mb-3">
          @foreach (var item in this.ViewBag.Basket.Products)
                {
                         <li class="list-group-item d-flex justify-content-between lh-condensed">
          <div>
            <h6 class="my-0">@item.ProductName</h6>
            <span>@item.Count x</span>
          </div>
          <span class="text-muted">@item.Price Kč</span>
        </li>
                }
        <li class="list-group-item d-flex justify-content-between">
          <span>Celkem k úhradě</span>
                    <strong>@ViewBag.Basket.TotalPrice</strong>
        </li>
      </ul>
    </div>
        <div class="col-md-8 order-md-1">
      <h4 class="mb-3">Billing address</h4>
      <form class="needs-validation" asp-action="PaidOrder">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstName">First name</label>
                        <input type="text" class="form-control" id="firstName" asp-for=Name placeholder="" value="" required="" required>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
                        <input type="text" class="form-control" id="lastName" asp-for=Surname placeholder="" value="" required="" required>
        
          </div>
        </div>
        <div class="mb-3">
          <label for="email">Email <span class="text-muted"></span></label>
          <input asp-for=Email type="email" class="form-control" id="email" required">
     
        </div>

        <div class="mb-3">
          <label for="address">Adresa </label>
                    <input type="text" class="form-control" id="address" asp-for=Address placeholder="1234 Main St" required="" required>
    
        </div>

        <div class="mb-3">
          <label for="address2">Adreasa 2 <span class="text-muted">(Optional)</span></label>
          <input type="text" class="form-control" id="address2" asp-for=Address2 placeholder="Apartment or suite">
        </div>

        <div class="row">
          <div class="col-md-5 mb-3">
           <label for="address2">Stát</span></label>
                        <input type="text" class="form-control" id="address2" asp-for=Country required>
        
          </div>
          <div class="col-md-3 mb-3">
            <label for="zip">Zip</label>
                        <input type="text" class="form-control" id="zip" asp-for=PostalCode placeholder="" required>
            <div class="invalid-feedback">
              Zip code required.
            </div>
          </div>
        </div>
        <hr class="mb-4">
        <h4 class="mb-3">Platba (Paypal Only)</h4>
                <a style="text-decoration: none" href="https://www.paypal.com/cgi-bin/webscr" target="_blank">
                    <img style="max-width:150px" src="~/Defaults/paypal.jpg"/>
                </a>
        <hr class="mb-4">
        <button class="btn btn-primary btn-lg btn-block" type="submit">Zaplatit</button>
      </form>
    </div>
  </div>

</body>
